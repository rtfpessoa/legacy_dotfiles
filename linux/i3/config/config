# reload the configuration file
bindsym $mod+F11 reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Control+F11 restart
# exit i3 (logs you out of your X session)

set $mode_exit exit i3? [y]es | [n]o
mode "$mode_exit" {
        bindsym y exec i3-msg exit
        bindsym n mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+Control+F12 mode "default"
}

bindsym $mod+Control+F12 mode $mode_exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

set $mode_power [l]ogout | [h]ibernate | [S]uspend | [r]eboot | [s]hutdown
mode "$mode_power" {
        bindsym l exec i3-msg exit
        bindsym s exec systemctl poweroff
        bindsym r exec systemctl reboot
        bindsym h exec betterlockscreen -l blur & systemctl hibernate
        bindsym S exec betterlockscreen -l blur & systemctl suspend
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym --release XF86PowerOff mode "$mode_power"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

# scrot - root
bindsym --release Print exec --no-startup-id scrot -e 'mkdir -p $HOME/Pictures/Screenshots/ && mv $f $HOME/Pictures/Screenshots/ && xclip -selection clipboard -target image/png -i $HOME/Pictures/Screenshots/$f'
# scrot - select window or rectangle
bindsym --release $mod+Shift+Print exec --no-startup-id scrot -s -e 'mkdir -p $HOME/Pictures/Screenshots/ && mv $f $HOME/Pictures/Screenshots/ && xclip -selection clipboard -target image/png -i $HOME/Pictures/Screenshots/$f'
bindsym --release $mod+Print exec --no-startup-id scrot -u -e 'mkdir -p $HOME/Pictures/Screenshots/ && mv $f $HOME/Pictures/Screenshots/ && xclip -selection clipboard -target image/png -i $HOME/Pictures/Screenshots/$f'

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/.config/i3/volume.sh -npy -i 1 -l 100 # increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/.config/i3/volume.sh -npy -d 1 # decrease sound volume
bindsym XF86AudioMute exec --no-startup-id $HOME/.config/i3/volume.sh -amn # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id $HOME/.config/i3/backlight.sh up # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id $HOME/.config/i3/backlight.sh down # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Multi-monitor
bindsym XF86Display exec $HOME/.config/i3/xrandr-adjust.sh && restart
bindsym $mod+ctrl+m exec $HOME/.config/i3/xrandr-adjust.sh && restart

